<Window x:Class="SignalRClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalRClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="575">
    <Grid Margin="0,0,10,17">
        <Label x:Name="LblUserName" Content="UserName:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TbUserName" Margin="85,14,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="TbMessage" Margin="10,37,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="120"/>
        <Button x:Name="BtnConnect" Content="Connect" HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top" Width="160" Click="BtnConnect_Click"/>
        <Button x:Name="BtnSend" Content="Send" Margin="180,166,0,0" VerticalAlignment="Top" Click="BtnSend_Click" HorizontalAlignment="Left" Width="160"/>
        <ListBox x:Name="LbMessage" Margin="10,195,10,10"/>
    </Grid>
</Window>
